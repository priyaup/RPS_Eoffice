<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2>Certificates</h2>
      <%= link_to 'New Certificate', new_certificate_path, class: 'btn btn-primary' %>
    </div>
    <div class="card-body">
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Child Name</th>
            <th>Father Name</th>
            <th>Mother Name</th>
            <th>Date of Birth</th>
            <th>Time</th>
            <th>Place of Birth</th>
            <th>Gender</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @certificates.each do |certificate| %>
            <tr>
              <td><%= certificate.child_name %></td>
              <td><%= certificate.father_name %></td>
              <td><%= certificate.mother_name %></td>
              <td><%= certificate.Dob %></td>
              <td><%= certificate.time %></td>
              <td><%= certificate.place_of_birth %></td>
              <td><%= certificate.gender %></td>
              <td><%= link_to 'Show', certificate, class: 'btn btn-info btn-sm' %></td>
              <td><%= link_to 'Edit', edit_certificate_path(certificate), class: 'btn btn-warning btn-sm' %></td>
              <td><%= button_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
