<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header">
      <h2>Edit Certificate</h2>
    </div>
    <div class="card-body">
      <%= form_with(model: @certificate, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :child_name %>
          <%= form.text_field :child_name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= form.label :father_name %>
          <%= form.text_field :father_name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= form.label :mother_name %>
          <%= form.text_field :mother_name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= form.label :Dob %>
          <%= form.date_field :Dob, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= form.label :time %>
          <%= form.time_field :time, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :gender %>
          <%= form.text_field :gender, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :place_of_birth %>
          <%= form.text_field :place_of_birth, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= form.submit 'Update Certificate', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <%= link_to 'Back', certificates_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
